# frozen_string_literal: true

source "https://rubygems.org"

ruby "3.4.4"

# A beautiful, minimal theme for Jekyll [https://github.com/jekyll/minima]
gem "minima"

gem "webrick"
gem "standard"

# Jekyll is a blog-aware static site generator in Ruby [https://jekyllrb.com/]
gem "jekyll"

# CSV Reading and Writing [https://ruby.github.io/csv/]
gem "csv"

group :jekyll_plugins do
  # Streamline your writing in Jekyll with commands [https://github.com/jekyll/jekyll-compose]
  gem "jekyll-compose"

  # A Jekyll plugin to generate an Atom (RSS-like) feed of your Jekyll posts [https://github.com/jekyll/jekyll-feed]
  gem "jekyll-feed"

  # Rebuild your Jekyll site when a file changes with the `--watch` switch [https://github.com/jekyll/jekyll-watch]
  gem "jekyll-watch"

  # [https://github.com/github/pages-gem]
  # gem "github-pages"
end
